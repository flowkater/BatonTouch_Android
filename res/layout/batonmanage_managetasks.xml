<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
         android:background="#8b8989"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/featured_adapter"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:background="#000000"
        android:onClick="mOnClick"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:background="@drawable/junghyun" />

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/image" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/dealName"
                    android:layout_width="140dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:text="Deal 이름"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#ffffff"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="10,000원"
                    android:textAppearance="?android:attr/textAppearanceMedium"
android:textColor="#ffffff"
                    android:textSize="12dp" />
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp" >

                <TextView
                    android:id="@+id/name"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="2012.10.23"
                    android:textAppearance="?android:attr/textAppearanceMedium"
             android:textColor="#ffffff"
                    android:textSize="12dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="대기중"
                    android:textAppearance="?android:attr/textAppearanceMedium"
             android:textColor="#ffffff"
                    android:textSize="12dp" />
            </TableRow>
        </TableLayout>
    </RelativeLayout>

    <TextView
             android:background="#8b8989"
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:lineSpacingMultiplier="2"
        android:textSize="20dp"
        android:enabled="false"
        android:text="안녕하세요. 이화여대 정문에 위치한 밥풀이라는 음식점에서 양념통닭 3마리 사와주시고요. 오는 길에 콜라도 사와주세요." >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:layout_margin="20dp"
        android:textStyle="bold"
        android:text="만료 시간까지 남은 시간 : "
        />

</LinearLayout>