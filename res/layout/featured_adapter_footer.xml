<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/featured_adapter"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="@drawable/box_click_style"
    android:onClick="mOnClick"
    android:orientation="vertical" >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/userImage"
        android:layout_width="65dp"
        android:layout_margin="10dp"
        android:layout_height="68dp"
        android:layout_gravity="center_horizontal"

        android:background="@drawable/user_picture_frame" >

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="2dp"
            android:layout_marginTop="2dp"
            android:background="@drawable/profile_default_img" />

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
           android:background="@drawable/ic_launcher" />

    </RelativeLayout>

    <ImageButton
        android:id="@+id/selectBtn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/createmanage_choose_style" />

    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/userImage"
        android:layout_marginLeft="23dp"
        android:layout_toRightOf="@+id/userImage"
        android:singleLine="true"
        android:text="ID : 다니엘"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textSize="15dp" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/userImage"
        android:layout_alignLeft="@+id/userName"
        android:src="@drawable/fb_btn" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignBottom="@+id/imageView1"
        android:layout_centerHorizontal="true"
        android:src="@drawable/phone_verifed" />

</RelativeLayout>