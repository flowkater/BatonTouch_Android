<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@drawable/rectangle_background_400"
    android:orientation="vertical" >


    <ImageView
        android:id="@+id/upper_line"
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/upper_line_mini" >
    </ImageView>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_marginTop="-1dp"
        android:layout_width="fill_parent"
        android:layout_height="50dp"
    
        android:background="@drawable/top_inquiry" />

    <TableLayout
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <TextView
                   android:gravity="right"
                android:id="@+id/user"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="작성자 : " />

            <EditText
                android:id="@+id/editText1"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:background="@drawable/createbaton_underline_box_style"
                android:layout_height="wrap_content"
                android:ems="10" />


        </TableRow>

        <TableRow
            android:id="@+id/tableRow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

           <TextView
                android:id="@+id/email"
                android:layout_weight="1"
                   android:gravity="right"
                android:layout_width="0dp"
                     android:textSize="20dp"
                android:layout_height="wrap_content"
                android:text="email : " />

            <EditText
                android:id="@+id/editText1"
              android:layout_weight="3"
                android:background="@drawable/createbaton_underline_box_style"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

         <TextView
                android:id="@+id/title"
                android:layout_weight="1"
                android:layout_width="0dp"
                     android:textSize="20dp"
                android:gravity="right"
                android:layout_height="wrap_content"
                android:text="제목 : " />

            <EditText
                android:id="@+id/editText1"
                android:background="@drawable/createbaton_underline_box_style"
             android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:ems="10" />

        </TableRow>

        <TableRow
            android:id="@+id/tableRow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

                <TextView
                    android:gravity="top|right"
                android:id="@+id/content"
                android:layout_weight="1"
                android:layout_width="0dp"
                     android:textSize="20dp"
                android:layout_height="fill_parent"
                android:text="내용 : " />

            <EditText
                android:id="@+id/editText1"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:ems="10" />

        </TableRow>
    </TableLayout>

    <ImageButton
        android:id="@+id/button1"
        android:layout_gravity="right"
        android:layout_margin="10dp"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/setting_policy_sendbutton_style"
        android:text="Button" />

</LinearLayout>