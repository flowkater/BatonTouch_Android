<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="60dp" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background"
        android:orientation="vertical" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/main_upper_line" />

        <Button
            android:layout_marginTop="30dp"
            android:id="@+id/FAQBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="generalSettingBtn"
            android:text="자주 묻는 질문" />

        <Button
            android:id="@+id/suggestionBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="generalSettingBtn"
            android:text="문의/ 제안/ 신고" />

        <ImageButton
            android:id="@+id/recommendToFriendsBtn"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_width_android"
            android:onClick="sendUrlLink"
            android:src="@drawable/btn_kakaotalk_logo_andr"
            android:text="친구에게 바톤터치 추천하기!" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#000000"
            android:gravity="left|center_vertical"
            android:text="알림수정"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/paymentBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="privacySettingBtn"
            android:text="결제정보 수정/확인" />

        <Button
            android:id="@+id/alarmBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="alarmSettingBtn"
            android:text="알림 설정" />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="privacySettingBtn"
            android:text="로그아웃" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="#000000"
            android:gravity="left|center_vertical"
            android:text="바톤터치"
            android:textColor="#ffffff"
            android:textSize="25dp" />

        <Button
            android:id="@+id/annoucementBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="buttontouchSettingBtn"
            android:text="공지사항" />

        <Button
            android:id="@+id/policyBtn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:onClick="buttontouchSettingBtn"
            android:text="이용약관 및 개인 보호 정책" />
    </LinearLayout>

</ScrollView>