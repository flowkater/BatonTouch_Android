<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="60dp"
    android:background="@drawable/rectangle_background_400" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <ImageView
                android:id="@+id/upper_line"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/upper_line_mini" >
            </ImageView>

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="fill_parent"
                android:layout_height="50dp"
                android:layout_marginTop="-1dp"
                android:background="@drawable/top_see_more" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical" >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/annoucementBtn"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/setting_notice_icon_style"
                    android:onClick="generalSettingBtn" />

                <Button
                    android:id="@+id/howItWorks"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/setting_how_icon_style"
                    android:onClick="generalSettingBtn" />

                <Button
                    android:id="@+id/paymentBtn"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/setting_credit_icon_style"
                    android:onClick="generalSettingBtn" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/recommendToFriendsBtn"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/setting_kakao_icon_style"
                    android:onClick="sendUrlLink"
                    android:text="친구에게 바톤터치 추천하기!" />

                <Button
                    android:id="@+id/FAQBtn"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/setting_qua_icon_style"
                    android:onClick="generalSettingBtn" />

                <Button
                    android:id="@+id/alarmBtn"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/setting_alarm_icon_style"
                    android:onClick="generalSettingBtn" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:gravity="center_horizontal"
                android:orientation="horizontal" >

                <ImageButton
                    android:id="@+id/logoutBtn"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/setting_logout_icon_style"
                    android:onClick="generalSettingBtn" />

                <Button
                    android:id="@+id/suggestionBtn"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/setting_feedback_icon_style"
                    android:onClick="generalSettingBtn" />

                <Button
                    android:id="@+id/policyBtn"
                    android:layout_width="95dp"
                    android:layout_height="95dp"
                    android:layout_margin="1dp"
                    android:background="@drawable/setting_policy_icon_style"
                    android:onClick="generalSettingBtn" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</ScrollView>