<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/rectangle_background_400" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
     
        
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:paddingBottom="30dp" >

       <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/upper_line"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/upper_line_mini" >
        </ImageView>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:layout_marginTop="-1dp"
            android:background="@drawable/top_make_baton" />
    </LinearLayout>

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/status_bar1" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" >

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="100dp" >

                <TextView
                    android:id="@+id/batonName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="바톤이름:"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/nameEd"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:background="@drawable/createbaton_underline_box_style"
                    android:hint="ex) 카라멜 마키야토 사다주세요."
                    android:singleLine="true"
                    android:textSize="12dp" >
                </EditText>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow1"
                android:layout_width="wrap_content"
                android:layout_height="100dp" >

                <TextView
                    android:id="@+id/fromHere"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="여기에서:"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/fromHereEt"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:background="@drawable/createbaton_underline_box_style"
                    android:hint="경유지를 기록해주세요. ex) 이대역 커피빈  or 서대문구 대현동 45-10"
                    android:singleLine="true"
                    android:textSize="12dp" >
                </EditText>
            </TableRow>

            <TableRow
                android:id="@+id/tableRow2"
                android:layout_width="wrap_content"
                android:layout_height="100dp" >

                <TextView
                    android:id="@+id/toHere"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right|center_vertical"
                    android:text="여기로:"
                    android:textSize="25dp" />

                <EditText
                    android:id="@+id/toThereEt"
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="3"
                    android:background="@drawable/createbaton_underline_box_style"
                    android:hint="러너의 목적지에요 ex) 서대문구 대현동 11-1 ecc or 이대 ecc"
                    android:textSize="12dp" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/askForThis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="10dp"
                android:gravity="right|center_vertical"
                android:text="이것들을 부탁해요!"
                android:textSize="25dp" />

            <EditText
                android:id="@+id/taskDescriptionEt"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:gravity="top"
                android:hint="이대역 3번출구에서 나와서 첫번째 골목 오른쪽 김밥집"
                android:textSize="15dp" >
            </EditText>
        </LinearLayout>

        <ImageButton
            android:id="@+id/nextBtn"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:background="@drawable/createbaton_nextbtn_style"
            android:onClick="nextBtnOnClick" />
    </LinearLayout>

</ScrollView>