<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_background_400" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical" >

        <include
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_profile" />

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical" >

            <!-- <ImageView -->
            <!-- android:id="@+id/uploadImage" -->
            <!-- android:layout_width="100dp" -->
            <!-- android:layout_height="100dp" -->
            <!-- android:layout_margin="10dp" -->


            <!-- android:src="@drawable/ic_launcher" /> -->

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="140dp"
                android:layout_height="147dp"
                android:layout_margin="10dp"
                android:background="@drawable/user_picture_frame" >

                <ImageButton
                    android:id="@+id/uploadImage"
                    android:layout_width="fill_parent"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/profile_default_img" />

                <ImageButton
                    android:id="@+id/uploadbutton"
                    android:layout_width="fill_parent"
                    android:layout_height="130dp"
                    android:layout_margin="5dp"
                    android:background="@drawable/profile_edit"
                    android:onClick="mOnClick" />
            </RelativeLayout>

            <!-- <ImageButton -->
            <!-- android:id="@+id/uploadbutton" -->
            <!-- android:layout_width="50dp" -->
            <!-- android:layout_height="50dp" -->
            <!-- android:layout_marginTop="50dp" -->
            <!-- android:background="@drawable/add" -->
            <!-- android:onClick="mOnClick" /> -->

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:background="@drawable/profile_division"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/aboutMe"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left|center_vertical"
                    android:text="저는 이래요!"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/orange_dotted_line" />

                <EditText
                    android:id="@+id/editTextIntroduce"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:layout_margin="5dp"
                    android:ems="10"
                    android:hint="예) 저는 날쌘돌이 입니다. 그리고 매우 성실해서 약속된 시간에 모든 일을 완벽히 끝낼 수 있습니다." >
                </EditText>
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="150dp"
                android:layout_margin="5dp"
                android:background="@drawable/profile_division"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/recentActivity"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:gravity="left|center_vertical"
                    android:text="최근활동"
                    android:textSize="30dp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/orange_dotted_line" />

                <LinearLayout
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="20dp"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal" >

                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/user_picture_frame" >

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="wrap_content"
                            android:layout_height="63dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/profile_default_img" />
                    </RelativeLayout>

                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/user_picture_frame" >

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="fill_parent"
                            android:layout_height="63dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/profile_default_img" />
                    </RelativeLayout>

                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/user_picture_frame" >

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="fill_parent"
                            android:layout_height="63dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/profile_default_img" />
                    </RelativeLayout>

                    <RelativeLayout
                        xmlns:android="http://schemas.android.com/apk/res/android"
                        android:layout_width="0dp"
                        android:layout_height="72dp"
                        android:layout_margin="2dp"
                        android:layout_weight="1"
                        android:background="@drawable/user_picture_frame" >

                        <ImageView
                            android:id="@+id/imageView6"
                            android:layout_width="fill_parent"
                            android:layout_height="63dp"
                            android:layout_margin="2dp"
                            android:background="@drawable/profile_default_img" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>

            <ImageButton
                android:id="@+id/editCompleteBtn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/profile_complete_style"
                android:onClick="editCompleteBtn" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>